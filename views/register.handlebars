<div class="panel-body">
    <form method="post" action="/register">
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" />
        </div>
        <div class="form-group">
            <button type="submit">
                Register
            </button>
        </div>
        <div>
            Go back to
            <a href="/login">
                Login Page?
            </a>
        </div>
    </form>
</div>